<body class="container smart-style-2">

    <header id="header" style="height: 80px; padding-left: 20px;">
        <div id="logo-group">
          
            <span id="logo" style="margin-top: 10px; color: white; font-size: 18px; width: 80px">
                <img src="~/img/qiwi3.png" alt="SmartAdmin" style="width: auto">
            </span>
 
            </div>

 

        <div id="project-context" style="float: right; margin-right: 0px">

            <p style="margin-top: 22px;color: white;font-size: 15px"><a style="margin-top: 22px;color: white;font-size: 15px" href="/account/register">Регистрация</a><span> / <a style="margin-top: 22px;color: white;font-size: 15px" href="/account/login">Вход</a></span></p>

        </div>

    </header>



    <div role="main" id="main" float:left;">
      
			<!-- MAIN CONTENT -->
			<div class="container" id="content">

				<div class="row">
                  
                    <div class="col-xs-12 col-sm-12 col-md-5 col-lg-4">
                        <div class="well no-padding">
                            <form class="smart-form client-form" id="login-form" action="/account/login" novalidate="novalidate" method="POST">
                                <header>
                                    Вход
                                </header>

                                <fieldset>
									
                                    <section>
                                        <label class="label">Почта</label>
                                        <label class="input"> <i class="icon-append fa fa-user"></i>
                                            <input type="text" name="log">
                                            <b class="tooltip tooltip-top-right"><i class="fa fa-user txt-color-teal"></i> Пожалуйста введите свою почту</b></label>
                                    </section>

                                    <section>
                                        <label class="label">Пароль</label>
                                        <label class="input"> <i class="icon-append fa fa-lock"></i>
                                            <input type="password" name="pass">
                                            <b class="tooltip tooltip-top-right"><i class="fa fa-lock txt-color-teal"></i> Введите свой пароль</b> </label>
                                        <div class="note">
                                            <a href="forgotpassword.html">Забыли пароль?</a>
                                        </div>
                                    </section>

                                    <section>
                                        <label class="checkbox">
                                            <input type="checkbox" checked="" name="remember">
                                            <i></i>Оставаться залогененым</label>
                                    </section>
                                </fieldset>
                                <footer>
                                    <button class="btn btn-primary" type="submit">
                                        Вход
                                    </button>
                                </footer>
                            </form>

                        </div>
						
                        <h5 class="text-center"> - Или войдите используя -</h5>
															
                        <ul class="list-inline text-center">
